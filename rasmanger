#!/bin/bash
NowPath="/opt/rasmanger/"
# NowPath=$(cd "$(dirname "$0")"; pwd)  
FuncPath=${NowPath}/lib/func.sh
MianFIlePath=${NowPath}/rasmanger

#include func.sh
. ${FuncPath}

case ${1} in
    -s)
        showsysInfo ${2}
    ;;

    --update)
        cd 
        rm -rf ${NowPath}
        git clone https://github.com/ZevAlain/rasmanger.git /opt/rasmanger >> /dev/null
        cd  ${NowPath}
    ;;

    *)
        showCommandUsager
    ;;

esac


